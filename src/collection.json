{
  "extends": ["@schematics/angular"],
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "ngrx-store": {
      "description": "Generate a store in the project",
      "factory": "./ngrx-store/index#ngRxStore",
      "schema": "./ngrx-store/schema.json"
    },
    "usecase": {
      "description": "Generate a usecase in the project",
      "factory": "./usecase/index#generate",
      "schema": "./usecase/schema.json"
    },
    "query": {
      "description": "Generate a query in the project",
      "factory": "./query/index#generate",
      "schema": "./query/schema.json"
    },
    "gateway": {
      "description": "Generate a gateway in the project",
      "factory": "./gateway/index#generate",
      "schema": "./gateway/schema.json"
    }
  }
}
