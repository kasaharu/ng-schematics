{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNgRxStore",
  "title": "NgRx Store Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the store.",
      "type": "string"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the store.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    }
  },
  "required": ["name"]
}
